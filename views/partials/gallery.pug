mixin gallery(options)
    - var DEFAULT_OPTIONS = { devposts: [{}] };
    - options = Object.assign({}, DEFAULT_OPTIONS, options || {});
    #gallery.container
        .row.text-center.text-lg-left
            - for(var i = 0; i < options.devposts.length; i++) {
                .col-lg-3.col-md-4.col-xs-6
                    a.d-block.h-100(href="Development/" + options.devposts[i].title)
                        img.img-fluid.img-thumbnail(class='raise', src=options.devposts[i].thumbnail, alt="")
            - }

